@model Inventory.ViewModel.Warehouses.WarehouseVM

@{
    ViewData["Title"] = "Details";
}
@await Html.PartialAsync("_Alerts")

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WarehouseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WarehouseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BranchName)
        </dd>

        <h2>Warehouse Stocks</h2>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Stock ID</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stock in Model.Stocks)
                {
                    <tr>
                        <td>@stock.StockId</td>
                        <td>@stock.ProductName</td>
                        <td>@stock.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </dl>

</div>


<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.WarehouseId" class="btn btn-primary">Edit</a>

    <!-- Delete button opens modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
        Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


<!-- DELETE CONFIRMATION MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete the Warehouse:
                <strong>@Model.WarehouseName</strong> ?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form method="post" asp-action="Delete" asp-route-id="@Model.WarehouseId">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
