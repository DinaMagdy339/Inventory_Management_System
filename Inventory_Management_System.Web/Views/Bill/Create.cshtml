@model Inventory.ViewModel.Bills.BillViewModel

@{
    ViewData["Title"] = "Create";
}
@await Html.PartialAsync("_Alerts")

<h1>Create</h1>

<h4>Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BillTypeName"></label>
                <select asp-for="BillTypeName" class="form-control searchable-select"
                        asp-items="@(new SelectList(ViewBag.BillTypes ?? new List<string>()))">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="VendorName"></label>
                <select asp-for="VendorName" class="form-control searchable-select"
                        asp-items="@(new SelectList(ViewBag.Vendors ?? new List<string>()))">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="GRNNumber"></label>
                <select asp-for="GRNNumber" class="form-control searchable-select"
                        asp-items="@(new SelectList(ViewBag.ReceivedNotes??new List<string>()))">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="BillName"></label>
                <input asp-for="BillName" class="form-control" />
                <span asp-validation-for="BillName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VendorDeliveryNumber"></label>
                <input asp-for="VendorDeliveryNumber" class="form-control" />
                <span asp-validation-for="VendorDeliveryNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VendorInvoiceNumber"></label>
                <input asp-for="VendorInvoiceNumber" class="form-control" />
                <span asp-validation-for="VendorInvoiceNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BillDate"></label>
                <input asp-for="BillDate" class="form-control" />
                <span asp-validation-for="BillDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BillDueDate"></label>
                <input asp-for="BillDueDate" class="form-control" />
                <span asp-validation-for="BillDueDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.searchable-select').select2({
                placeholder: "اكتب للبحث...",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}

