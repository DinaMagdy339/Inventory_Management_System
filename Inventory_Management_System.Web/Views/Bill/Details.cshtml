@model Inventory.ViewModel.Bills.BillViewModel

@{
    ViewData["Title"] = "Details";
}
@await Html.PartialAsync("_Alerts")


<h2>Bill Details</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Bill Name</dt>
    <dd class="col-sm-9">@Model.BillName</dd>

    <dt class="col-sm-3">Vendor Delivery Number</dt>
    <dd class="col-sm-9">@Model.VendorDeliveryNumber</dd>

    <dt class="col-sm-3">Vendor Invoice Number</dt>
    <dd class="col-sm-9">@Model.VendorInvoiceNumber</dd>

    <dt class="col-sm-3">Bill Date</dt>
    <dd class="col-sm-9">@Model.BillDate</dd>

    <dt class="col-sm-3">Bill Due Date</dt>
    <dd class="col-sm-9">@Model.BillDueDate</dd>

    <dt class="col-sm-3">Bill Type</dt>
    <dd class="col-sm-9">@Model.BillTypeName</dd>

    <dt class="col-sm-3">Vendor</dt>
    <dd class="col-sm-9">@Model.VendorName</dd>

    <dt class="col-sm-3">GRN Number</dt>
    <dd class="col-sm-9">@Model.GRNNumber</dd>

    <dt class="col-sm-3">GRN Date</dt>
    <dd class="col-sm-9">@Model.GRNDate</dd>

    <dt class="col-sm-3">Payment Status</dt>
    <dd class="col-sm-9">@Model.PaymentStatus</dd>
</dl>

<hr />

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.BillId" class="btn btn-primary">Edit</a>

    <!-- Delete button opens modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
        Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


<!-- DELETE CONFIRMATION MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete the bill:
                <strong>@Model.BillName</strong> ?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form method="post" asp-action="Delete" asp-route-id="@Model.BillId">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
